---
import "../styles/app.css";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import BackgroundImage from "@components/Background.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>unearth</title>
    </head>
    <body>
        <BackgroundImage>
            <header class="p-2">
                <a href="/">
                    <h1 class="text-right coming-soon">
                        unearth<br />.club
                    </h1>
                </a>
            </header>
            <main
                class="mx-auto max-w-5xl px-2 mt-8 w-full flex flex-col gap-2 items-center justify-center"
            >
                <slot />
            </main>
        </BackgroundImage>
        <Analytics />
        <SpeedInsights />
    </body>
</html>
<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
